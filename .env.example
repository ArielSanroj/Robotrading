# Email Configuration
GMAIL_ADDRESS=your_email@gmail.com
GMAIL_APP_PASSWORD=your_app_password
RECIPIENT_EMAIL=your_recipient@gmail.com

# Alpha Vantage API Key
ALPHA_VANTAGE_KEY=your_alpha_vantage_key

# Alpaca Configuration (for ALPACA broker)
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_SECRET_KEY=your_alpaca_secret_key

# Broker Selection
BROKER=ALPACA  # Options: ALPACA or IBKR
USE_PAPER=False  # Set to False for live trading (CHANGED TO LIVE)
SHARES_PER_TRADE=10  # Number of shares per trade

# Portfolio Allocation (Multi-Asset Trading)
# These percentages are automatically managed by the bot
EQUITY_ALLOCATION=60  # 60% Renta Variable (Stocks)
FIXED_INCOME_ALLOCATION=30  # 30% Renta Fija (Bonds/ETFs)
CRYPTO_ALLOCATION=10  # 10% Criptomonedas

# Crypto Trading Configuration
CRYPTO_API_KEY=your_crypto_api_key  # Optional: For advanced crypto trading
CRYPTO_API_SECRET=your_crypto_api_secret  # Optional: For advanced crypto trading

# Interactive Brokers Configuration (for IBKR broker)
IBKR_HOST=127.0.0.1  # Localhost (or your Gateway IP)
IBKR_PORT=7497       # 7497 for paper, 7496 for live
IBKR_CLIENT_ID=1     # Unique ID (1-100; change if multiple scripts)